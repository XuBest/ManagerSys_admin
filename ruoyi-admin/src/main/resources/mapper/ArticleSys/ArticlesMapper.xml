<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.ArticleSys.mapper.ArticlesMapper">
    
    <resultMap type="Articles" id="ArticlesResult">
        <result property="articleId"    column="articleId"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="publishtime"    column="publishtime"    />
        <result property="category"    column="category"    />
        <result property="author"    column="author"    />
    </resultMap>

    <sql id="selectArticlesVo">
        select articleId, title, content, publishtime, category, author from articles
    </sql>

    <select id="selectArticlesList" parameterType="Articles" resultMap="ArticlesResult">
        <include refid="selectArticlesVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
        </where>
    </select>
    
    <select id="selectArticlesByArticleId" parameterType="Integer" resultMap="ArticlesResult">
        <include refid="selectArticlesVo"/>
        where articleId = #{articleId}
    </select>
        
    <insert id="insertArticles" parameterType="Articles" useGeneratedKeys="true" keyProperty="articleId">
        insert into articles
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="publishtime != null">publishtime,</if>
            <if test="category != null">category,</if>
            <if test="author != null and author != ''">author,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="publishtime != null">#{publishtime},</if>
            <if test="category != null">#{category},</if>
            <if test="author != null and author != ''">#{author},</if>
         </trim>
    </insert>

    <update id="updateArticles" parameterType="Articles">
        update articles
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="publishtime != null">publishtime = #{publishtime},</if>
            <if test="category != null">category = #{category},</if>
            <if test="author != null and author != ''">author = #{author},</if>
        </trim>
        where articleId = #{articleId}
    </update>

    <delete id="deleteArticlesByArticleId" parameterType="Integer">
        delete from articles where articleId = #{articleId}
    </delete>

    <delete id="deleteArticlesByArticleIds" parameterType="String">
        delete from articles where articleId in 
        <foreach item="articleId" collection="array" open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </delete>
</mapper>